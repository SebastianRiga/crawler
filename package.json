{
  "name": "crawler",
  "version": "0.0.0001",
  "description": "A simple dungeon crawler written in typescript using phaser and parcel.",
  "repository": "https://sebastianrigadevelopment@dev.azure.com/sebastianrigadevelopment/Crawler/_git/Crawler",
  "homepage": "./",
  "main": "build/app.js",
  "bugs": {
    "email": "sebastian.riga.development@gmail.com",
    "url": "https://dev.azure.com/sebastianrigadevelopment/Crawler/_workitems/recentlyupdated/"
  },
  "author": "Sebastian Riga",
  "license": "MIT",
  "private": true,
  "keywords": [
    "phaser",
    "parcel",
    "electron",
    "typescript"
  ],
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "init": "yarn install",
    "develope:browser": "parcel src/index.html -d .tmp -p 3000 && open-cli http://localhost:3000",
    "develope:electron": "yarn build:electron && electron --remote-debugging-port=3000 build/app.js",
    "build:browser": "parcel build src/index.html --public-url ./ -d build --out-file=index",
    "build:electron": "parcel build src/electron.ts src/index.html --public-url ./ -d build --out-file=app --target=electron",
    "dist:browser": "parcel build src/index.html --public-url ./ -d dist --out-file=index",
    "dist:electron": "yarn build:electron && electron-builder",
    "lint": "eslint . --ext .ts",
    "clean:dist": "rm -rf dist",
    "clean:build": "rm -rf build",
    "clean:tmp": "rm -rf .tmp",
    "clean:cache": "rm -rf .parcel-cache .cache",
    "clean:node_modules": "rm -rf node_modules",
    "superclean": "yarn clean:dist && yarn clean:build && yarn clean:cache && yarn clean:tmp",
    "deinit": "yarn superclean && yarn clean:node_modules"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "eslint": "^7.15.0",
    "eslint-config-google": "^0.14.0",
    "open-cli": "^6.0.1",
    "parcel": "^1.12.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "phaser": "^3.24.1"
  },
  "parcelCleanPaths": [
    "dist"
  ],
  "build": {
    "appId": "com.riga.sebastian.crawler",
    "mac": {
      "category": "public.app-category.games"
    },
    "files": [
      "build/*"
    ]
  },
  "staticFiles": {
    "staticPath": "assets",
    "watcherGlob": "**"
  }
}
