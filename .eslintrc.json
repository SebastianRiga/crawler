{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "indent": [
            "error",
            4
        ],
        "max-len": [
            "error",
            {
                "code": 140
            }
        ],
        "valid-jsdoc": [
            "error", 
            { 
                "requireReturnType": false, 
                "requireParamDescription": true, 
                "requireReturnDescription": true, 
                "requireParamType": false, 
                "requireReturn": false, 
                "matchDescription": "" 
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ]
    }
}
